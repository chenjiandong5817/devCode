{
  "type": "Layout",
  "description": "国内进港航班",
  "bodyStyle": {
    "minWidth": 1920,
    "minHeight": 1080,
    "backgroundColor": "#212E5B"
  },
  "langs": [ "zh-cn", "en-ww" ],
  "defaultLang": "zh-cn",
  "langTimer": 10000,
  "extraParam": {
    "dynaScrollText": {
      "description": "动态滚动文本",
      "dataSource": "C4C872B83CB84D13B12A55C48656FFC7",
      "singleData": true,
      "columnName": "scrolltext"
    },
    "virtualRowSize": 10
  },
  "rows": [
    {
      "type": "Row",
      "align": "top",
      "justify": "start",
      "cols": [
        {
          "type": "Column",
          "span": 24,
          "bodyStyle": {},
          "children": [
            {
              "type": "Grid",
              "description": "国内进港航班列表",
              "dataSource": "17EF84121B8F41FC9C5D9C5E049E0956",
              "mainSource": true,
              "mainPager": true,
              "pageInterval": 20000,
              "refreshInterval": 20000,
              "bodyStyle": {
                "defaultRowStyle": {
                  "rowStripe": [ "#284682", "#1E2D5A" ],
                  "fontSize": 42,
                  "color": "#fff",
                  "height": 89,
                  "lineHeight": 89
                },
                "defaultHeaderStyle": {
                  "fontSize": 50,
                  "color": "#FAC35A",
                  "backgroundColor": "#1E2D5A",
                  "textAlign": "left",
                  "borderBottom": "1px solid",
                  "borderBottomColor": "#FAC35A",
                  "lineHeight": 100,
                  "height": 100
                }
              },
              "columns": [
                {
                  "type": "GridColumn",
                  "name": "carrier",
                  "label": {},
                  "style": {
                    "textAlign": "center",
                    "width": 120
                  },
                  "headerStyle": {
                    "backgroundColor": "#1E2D5A"
                  },
                  "children": [
                    {
                      "type": "Flop",
                      "style": {
                        "height": 70,
                        "lineHeight": 70
                      },
                      "columnName": "carrier",
                      "multiSource": [
                        {
                          "name": "shareflight",
                          "separator": "",
                          "handle": {
                            "split": "/",
                            "regex": "/^[0-9a-zA-Z]{2}/"
                          }
                        }
                      ],
                      "item": {
                        "type": "Image",
                        "style": {
                          "height": 70,
                          "lineHeight": 70,
                          "borderRadius": "70px"
                        },
                        "imgType": "flight_logo",
                        "imgSize": "220x220",
                        "flopItemValue": true
                      }
                    }
                  ]
                },
                {
                  "name": "carrier",
                  "label": {
                    "zh-cn": "航班号",
                    "en-ww": "Flight"
                  },
                  "style": {
                    "width": 460,
                    "fontSize": 42,
                    "color": "#fff"
                  },
                  "headerStyle": {
                    "backgroundColor": "#1E2D5A",
                    "textAlign": "left"
                  },
                  "children": [
                    {
                      "type": "FixedLeftMarquee",
                      "speed": 80,
                      "style": {
                        "height": 89,
                        "lineHeight": 89,
                        "color": "#fff",
                        "fontSize": 42
                      },
                      "fixedColumnNames": ["carrier", "flight"],
                      "scrollColumnName": "shareflight",
                      "joiner": "/",
                      "joinerHideBy": "shareflight"
                    }
                  ]
                },
                {
                  "name": "route",
                  "label": {
                    "zh-cn": "始发站/经停",
                    "en-ww": "From/Via"
                  },
                  "style": {
                    "width": 460,
                    "minWidth": 260,
                    "fontSize": 42
                  },
                  "children": [
                    {
                      "type": "MarqueeText",
                      "speed": 80,
                      "style": {
                        "width": 460
                      },
                      "content": [
                        {
                          "type": "Text",
                          "style": {
                            "height": 89,
                            "lineHeight": 89,
                            "color": "#fff",
                            "fontSize": 42
                          },
                          "columnName": "route"
                        }
                      ]
                    }
                  ]
                },
                {
                  "name": "estimatearrivetime",
                  "label": {
                    "zh-cn": "预计时间",
                    "en-ww": "Time"
                  },
                  "style": {
                    "minWidth": 280,
                    "textAlign": "left",
                    "fontSize": 42
                  },
                  "children": [
                    {
                      "type": "MarqueeText",
                      "speed": 80,
                      "style": {
                        "width": 280
                      },
                      "content": [
                        {
                          "type": "Text",
                          "style": {
                            "height": 89,
                            "lineHeight": 89,
                            "color": "#fff",
                            "fontSize": 42
                          },
                          "date": {
                            "formatFrom": "yyyy-MM-dd HH:mm:ss",
                            "formatTo": "HH:mm"
                          },
                          "emptyReplace": ["schedulearrivetime"],
                          "columnName": "estimatearrivetime"
                        }
                      ]
                    }
                  ]
                },
                {
                  "name": "actualarrivetime",
                  "label": {
                    "zh-cn": "准确时间",
                    "en-ww": "Arr.Time"
                  },
                  "style": {
                    "minWidth": 280,
                    "textAlign": "left",
                    "fontSize": 42
                  },
                  "headerStyle": {
                    "textAlign": "left"
                  },
                  "children": [
                    {
                      "type": "MarqueeText",
                      "speed": 80,
                      "style": {
                        "width": 280
                      },
                      "content": [
                        {
                          "type": "Text",
                          "style": {
                            "height": 89,
                            "lineHeight": 89,
                            "color": "#fff",
                            "fontSize": 42
                          },
                          "date": {
                            "formatFrom": "yyyy-MM-dd HH:mm:ss",
                            "formatTo": "HH:mm"
                          },
                          "columnName": "actualarrivetime"
                        }
                      ]
                    }
                  ]
                },
                {
                  "name": "flightstatus",
                  "label": {
                    "zh-cn": "航班状态",
                    "en-ww": "Status"
                  },
                  "style": {
                    "minWidth": 280,
                    "fontSize": 42
                  },
                  "children": [
                    {
                      "type": "DefaultMarqueeText",
                      "speed": 80,
                      "style": {
                        "width": 280
                      },
                      "textStyle": {
                        "height": 89,
                        "lineHeight": 89,
                        "color": "#fff",
                        "fontSize": 42
                      },
                      "transColor": {
                        "matchType": "begin",
                        "matchSet": {
                          "ENR": "#ff0000"
                        }
                      },
                      "twinkle": {
                        "matchType": "equals",
                        "matchSet": {
                          "ENR": true
                        }
                      },
                      "mergeText": [
                        {
                          "separator": "/",
                          "matchArray": [null, "", "CKI", "CKC", "BDS"],
                          "addsName": "irregularstatus"
                        }
                      ],
                      "columnName": "flightstatus"
                    }
                  ]
                }
              ]
            }

          ]
        }
      ]

    },
    {
      "type": "Row",
      "align": "top",
      "justify": "start",
      "bodyStyle": {
        "position": "absolute",
        "bottom": 0,
        "zIndex": 99,
        "width": 1920,
        "height": 90,
        "lineHeight": 90,
        "fontSize": 50,
        "color": "#FAC35A",
        "borderTop": "2px solid",
        "borderTopColor": "#FAC35A",
        "backgroundColor": "#212E5B"
      },
      "cols": [
        {
          "type": "Column",
          "span": 4,
          "bodyStyle": {
            "textAlign": "center"
          },
          "dataSource": "$main_pager",
          "singleData": true,
          "children": [
            {
              "type": "Text",
              "value": {
                "zh-cn": "第  ${pageNumber}/${pageCount}  页",
                "en-ww": "Page  ${pageNumber}/${pageCount}"
              },
              "replace": [
                {
                  "key": "pageNumber",
                  "columnName": "pageNumber"
                },
                {
                  "key": "pageCount",
                  "columnName": "pageCount"
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "span": 18,
          "dataSource": "$current_device_info",
          "singleData": true,
          "children": [
            {
              "type": "MarqueeText",
              "speed": 80,
              "vertical": false,
              "backZero": false,
              "style": {
                "height": 90,
                "lineHeight": 90
              },
              "content": [
                {
                  "type": "Text",
                  "columnName": "scrollText",
                  "mergeText": [
                    {
                      "separator": ". ",
                      "matchArray": [],
                      "addsName": "dynamicScrollText"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "span": 2,
          "children": [
            {
              "type": "Clock"
            }
          ]
        }
      ]
    }
  ]
}                                                                                                                                                                                                                                                                                                                                                               
