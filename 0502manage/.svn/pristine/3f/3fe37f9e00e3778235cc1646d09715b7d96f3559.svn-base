<script>
  export default {
    data () {
      return {
        // 该显示哪一个组的变量，默认显示第一组
        operateAdd: null,
        // 当点击编辑的时候为true,默认为false
        closable: false,
        // 当编辑没有被点击的时候就显示编辑,当被点击的时候显示取消.
        editName: '编辑',
        // 关联设备的台数，取数组的长度所得
        deviceNum: null,
        // 某个组的全部信息
        groupAllData: null,
        // 点到哪一个组别
        whichTag: null,
        // 是否展示删除界面
        isShowDel: false,
        // 需要删除的值
        delData: null,
        // 是否展示设备编辑页面
        dialogDeviceShow: false,
        // 关联设备表格的数据
        devicesData: null,
        // 图片的URL
        dialogImageUrl: '',
        // 是否显示图片的弹出框
        dialogVisible: false,
        // 显示广告位
        firstAdd: false,
        secondAdd: false,
        // 每次切换广告位的时候，根据参数请求数据，获得一个数组，
        // 每个数组里有关联设备的属性，广告图片的属性，第一广告位
        firstTags: [
          { name: 'a', type: 'info', devices: [ { id: '1', name: 'a' }, { id: '2', name: 'b' }, { id: '3', name: 'c' } ], addImg: [] },
          { name: 'b', type: 'info', devices: [ { id: '4', name: 'd' }, { id: '5', name: 'e' } ], addImg: [] }
        ],
        // 第二广告位的数据
        secondTags: [
          { name: 'c', type: 'info', devices: [ { id: '6', name: '1' }, { id: '7', name: '2' }, { id: '8', name: '3' }, { id: '9', name: '4' } ], addImg: [] }, { name: 'd', type: 'info', devices: [ { id: '10', name: '5' }, { id: '11', name: '6' }, { id: '12', name: '7' } ], addImg: [] }, { name: 'd', type: 'info', devices: [ { id: '9', name: '666' } ], addImg: [] }
        ],
        webTags: null
      }
    },
    computed: {
    },
    components: {
    },
    methods: {
      // 切换广告位的函数
      handleClick (value) {
        // 展示哪一个广告位
        this.operateAdd = value
        // 根据所展示的广告位匹配数据
        // 初始化广告位数据
        this.getAddData(value)
      },
      // 切换组别的函数，默认是第一个组,从value中识别出是哪一个组的
      clickTag (value) {
    	// 首先获取第一广告位的全部数据并且命名
        for (var i = 0; i < this.webTags.length; i++) {
          var nameTagFirst = i + 1
          this.webTags[i].name = '组别' + nameTagFirst
        }
        // 把这个组所拥有的信息给保存下来
        this.groupAllData = value
        // 获取这个组有多少设备的数量
        this.deviceNum = value.devices.length
        // 识别是哪一个组，然后点击的时候加颜色给识别
        this.whichTag = null
        for (var j = 0; j < this.webTags.length; j++) {
          if (this.webTags[j].name === value.name) {
            this.whichTag = j
          }
        }
        this.getColor()
      },
      // 给颜色
      getColor () {
        this.$nextTick(() => {
          var tags = document.getElementsByClassName('el-tag')
          for (var j = 0; j < tags.length; j++) {
            tags[j].style.backgroundColor = 'white'
          }
          tags[this.whichTag].style.backgroundColor = '#409EFF'
        })
      },
      // 点击编辑按钮，组别可以删除，并且编辑按钮变为取消按钮
      editGroup () {
        if (this.editName === '编辑') {
          this.closable = true
          this.editName = '取消'
          // 再次绑定数据为了有颜色
          this.getColor()
          return
        }
        if (this.editName === '取消') {
          this.closable = false
          this.editName = '编辑'
          // 再次绑定数据为了有颜色
          this.getColor()
        }
      },
      // 删除一个组确定后的操作
      showDelDia (value) {
        this.delData = value
        this.isShowDel = true
        this.clickTag(this.groupAllData)
      },
      // 确认删除
      confirmDel () {
    	// 寻找下标删除数组
        var whichTagFirst = null
        for (var i = 0; i < this.webTags.length; i++) {
          if (this.webTags[i].name === this.delData.name) {
            whichTagFirst = i
          }
        }
        this.webTags.splice(whichTagFirst, 1)
        this.isShowDel = false
        // 如果删除的是已经点击的就显示第一个组别，不是的话就删除原来的组别
        if (this.delData.name === this.groupAllData.name) {
          this.clickTag(this.webTags[0])
        } else {
          this.clickTag(this.groupAllData)
        }
      },
      // 关闭删除按钮
      handleDelClose () {
        this.isShowDel = false
        this.clickTag(this.groupAllData)
      },
      // 点击新增
      addGroup () {
    	var newGroupFirst = { name: 'h', type: 'info', devices: [], addImg: [] }
        this.webTags.push(newGroupFirst)
        this.clickTag(this.groupAllData)
      },
      // 设置某个广告位下的某个组别的设备
      setDevice () {
        this.dialogDeviceShow = true
        this.devicesData = this.groupAllData.devices
        this.clickTag(this.groupAllData)
      },
      // 确认就是这么多关联设备
      confirmDevice () {
        this.dialogDeviceShow = false
        this.clickTag(this.groupAllData)
      },
      // 关闭设备显示
      handleDeviceClose () {
        this.dialogDeviceShow = false
        this.clickTag(this.groupAllData)
      },
      // 移除图片
      handleRemove (file, fileList) {
        // console.log(file, fileList)
      },
      // 放大图片
      handlePictureCardPreview (file) {
        this.dialogImageUrl = file.url
        this.dialogVisible = true
      },
      // 初始化数据
      getAddData (value) {
      	this.webTags = null
        // 然后默认选中组别一，其他广告位也一样
        // 根据是哪一个广告位来获得对应的数据
        if (value === 'firstAdd') {
        	this.firstAdd = true
        	this.secondAdd = false
        	this.webTags = this.firstTags
            this.clickTag(this.webTags[0])
        }
        if (value === 'secondAdd') {
        	this.firstAdd = false
        	this.secondAdd = true
        	this.webTags = this.secondTags
        	this.clickTag(this.webTags[0])
        }
      }
    },
    mounted () {
      this.handleClick('firstAdd')
    }
  }
</script>

