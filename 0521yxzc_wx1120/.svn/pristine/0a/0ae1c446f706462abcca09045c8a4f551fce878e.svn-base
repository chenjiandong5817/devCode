.searchBox {
    position: fixed;
    top: 0px;
    width: 100%;
    z-index: 1991;
    box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.05);
}

.kucity_item dt, .kucity_item dd {
    display: inline-block;
}

.kucity_item dl {
    margin-bottom: 0px;
}

.kucity_item dt {
    vertical-align: top;
    width: 100%;
    line-height: 45px;
    background-color: #ddd;
    font-size: 16px;
    color: #4b4e51;
    padding-left: 10px;
}

.kucity_item dd {
    width: 100%;
}

.kucity_item dd span {
    width: 100%;
    display: inline-block;
    cursor: pointer;
    padding-left: 10px;
    border: 1px solid #fff;
    transition: all .3s;
    color: #4b4e51;
    font-size: 16px;
    line-height: 45px;
    border-bottom: 1px solid #e4e7ea;
}

.kucity_item dd span:hover {
    color: rgb(4, 168, 253);
    text-decoration: underline;
}

.kucity .result {
    list-style: none;
}

.kucity .result li {
    padding: 0 10px;
    background-color: #fff;
    margin: 2px 0;
    cursor: pointer;
    overflow: hidden;
    line-height: 45px;
    height: 45px;
    border-bottom: 1px solid #e4e7ea;
}

.kucity .result li.active, .kucity .result li.active .letter {
    background-color: rgb(4, 168, 253);
    color: #fff;
}

.kucity .result li .letter {
    float: right;
    color: #999;
}

.kucity .result li .noresult {
    padding: 0 8px;
    color: rgb(253, 130, 27);
}

.kucity .result li:hover, .kucity .result li:hover > .letter {
    background-color: rgb(4, 168, 253);
    color: #fff !important;
}

/*滚动条*/
.kucity_body::-webkit-scrollbar {
    width: 5px;
    height: 16px;
    background-color: #F5F5F5;
}

/*定义滚动条轨道 内阴影+圆角*/
.kucity_body::-webkit-scrollbar-track {
    border-radius: 10px;
    background-color: #F5F5F5;
}

/*定义滑块 内阴影+圆角*/
.kucity_body::-webkit-scrollbar-thumb {
    border-radius: 5px;
    background-color: #dedede;
}

.kucity_body::-webkit-scrollbar-thumb:hover {
    background-color: #999;
}

.kucity-current {
    font-size: 14px;
    padding-left: 10px;
    line-height: 45px;
    height: 45px;
    margin-bottom: 0px;
    color: #6b7886;
    border-bottom: 1px solid #eee;
}
