.kucity {
    font-family: "微软雅黑";
    font-size: 12px;
    position: absolute;
    top: 50px;
    left: 50px;
    width: 100%;
    border: 1px solid #dedede;
    box-shadow: 0 0 5px 1px #dedede;
    background-color: #fff;
}

#kucity_body {
    height: 800px;
    overflow-y: scroll;
}

.kucity h3 {
    font-size: 12px;
    font-weight: normal;
    color: #666;
}

.kucity .kucity_nav {
    font-size: 0;
    padding-top: 10px;
    list-style: none;
}

.kucity .kucity_nav a {
    text-decoration: none;
    color: #4b4e51;
    padding: 2px;
    width: 20px;
    display: inline-block;
    margin-right: 30px;
}

.kucity .person_nav {
    display: inline-block;
    width: 20px;
    position: fixed;
    right: 10px;
    border: none;
}

.kucity .kucity_nav li {
    cursor: pointer;
    font-size: 12px;
    border: 1px solid #dedede;
    display: inline-block;
    color: #666;
    transition: all .2s;
}

.kucity .person_nav li {
    border: none;

}

.kucity .kucity_nav li.active {
    background-color: rgb(4, 168, 253);
    border-color: rgb(4, 168, 253);
    color: #fff;
}

